<!doctype html>
<html>
<head>
    <meta charset='utf-8'>
    <style>
        *{
            margin:0;
            padding: 0;
        }
        li{
            list-style: none;
        }
        #main{
            width: 900px;
            margin: 0 auto;
        }
        #main li,#main span{
            width: 100px;
            height: 100px;
            font-size:100px;
            line-height: 100px;
            float: left;
            border-right: 1px solid white;
            text-align: center;
            background: red;
            color: white;
        }
        #start{
            width: 100px;
            height: 50px;
            font-size:30px;
        }
        #main span{
            display: block;
            background: blue;
        }
    </style>
    <script>
    var redTimer=null;
    function redNumberRoom(){
		var numberArrRed=[];
        for(var i=1; i<34;i++){
            numberArrRed.push(i);
        }
        return numberArrRed;
    }
    function radomNumber(newCount){
        var onumber=parseInt(Math.random()*newCount);
        return onumber;
    }
    function plusZero(arr){
        if(arr.length){
            var newArr=[];
            for(var i=0; i<arr.length; i++){
                if(arr[i]<10){
                    newArr[i] = '0'+arr[i];
                }else{
                    newArr[i] = arr[i];
                }
            }
            return newArr;
        }else{
            if(arr<10){
                var newArr = '0'+arr;
                return newArr;
            }else{
                return arr;
            }
        }
    }
    window.onload=function(){
        var obtn=document.getElementById('start');
        var oldNumber=null;
        startRandom = function(){
            //红球开始
            var resultRed=[];
            var oldArrNumber = redNumberRoom();
            for(var i=0; i<6; i++){
                oldNumber = radomNumber(oldArrNumber.length);
                resultRed.push(oldArrNumber[oldNumber]);
                oldArrNumber.splice(oldNumber,1);
            }
            resultRed.sort(function(a,b){
                return a-b;
            });
            resultRed = plusZero(resultRed);
            var omain = document.getElementById('main');
            var ali = omain.getElementsByTagName('li');
            for(var i=0; i<ali.length; i++){
                ali[i].innerHTML=resultRed[i];
            }
            //红球结束
            //蓝球开始
            var blueHTML = omain.getElementsByTagName('span')[0];
            blueHTML.innerHTML = plusZero(Math.ceil(Math.random()*16));
            //篮球结束
        };
        obtn.onclick = function(){
            if(this.innerHTML=='开始'){
                this.innerHTML='停止';
                clearInterval(redTimer);
                redTimer = setInterval(startRandom,30);
            }else{
                clearInterval(redTimer);
                this.innerHTML='开始';
            }
        }
    }
    </script>
</head>
<body>
    <div id="main">
        <ul>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <span></span>
        </ul>
        <button id="start">开始</button>
    </div>
</body>
